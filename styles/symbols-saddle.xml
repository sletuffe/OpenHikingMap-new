<Style name="symbols-saddle">
	<Rule>
		&maxscale_zoom13;
		&minscale_zoom14;
		<Filter>[natural] = 'saddle' or [natural] = 'col' or [natural] = 'notch' or [mountain_pass] = 'yes'</Filter>
		<PointSymbolizer file="symbols/saddle-10.svg"/>
    <TextSymbolizer fontset-name="sans-oblique" size="10" fill="black" margin="1" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dy="10" wrap-width="100">[name]+"\n"+[ele]</TextSymbolizer>
  </Rule>

	<Rule>
		&maxscale_zoom15;
		&minscale_zoom18;
		<Filter>[natural] = 'saddle'or [natural] = 'col' or [natural] = 'notch' or [mountain_pass] = 'yes'</Filter>
        <PointSymbolizer file="symbols/saddle-15.svg"/>
        <TextSymbolizer fontset-name="sans-oblique" size="10" fill="black" margin="1" halo-radius="2" halo-fill="rgba(255,255,255,0.8)" placement="point" dy="12" wrap-width="100">[name]+"\n"+[ele]</TextSymbolizer>
      </Rule>
</Style>
